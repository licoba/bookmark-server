{
  "openapi": "3.0.1",
  "info": {
    "title": "导航站后端接口文档",
    "description": "导航站后端所有接口的详细说明",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api",
      "description": "本地开发环境"
    }
  ],
  "paths": {
    "/categories": {
      "get": {
        "tags": ["分类管理"],
        "summary": "获取分类列表",
        "responses": {
          "200": {
            "description": "成功响应",
            "content": {
              "application/json": {
                "example": {
                  "code": 0,
                  "message": "获取分类列表成功",
                  "data": [
                    {
                      "id": 1,
                      "name": "常用工具",
                      "description": "常用工具描述",
                      "order": 1,
                      "createdAt": "2024-03-14T10:00:00.000Z",
                      "updatedAt": "2024-03-14T10:00:00.000Z"
                    }
                  ]
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["分类管理"],
        "summary": "创建分类",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "分类名称"
                  },
                  "description": {
                    "type": "string",
                    "description": "分类描述"
                  },
                  "order": {
                    "type": "integer",
                    "description": "排序顺序"
                  }
                },
                "required": ["name"]
              },
              "example": {
                "name": "新分类",
                "description": "分类描述",
                "order": 1
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "创建成功",
            "content": {
              "application/json": {
                "example": {
                  "code": 0,
                  "message": "创建分类成功",
                  "data": {
                    "id": 1,
                    "name": "新分类",
                    "description": "分类描述",
                    "order": 1,
                    "createdAt": "2024-03-14T10:00:00.000Z",
                    "updatedAt": "2024-03-14T10:00:00.000Z"
                  }
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["分类管理"],
        "summary": "更新分类",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "integer",
                    "description": "分类ID"
                  },
                  "name": {
                    "type": "string",
                    "description": "分类名称"
                  },
                  "description": {
                    "type": "string",
                    "description": "分类描述"
                  },
                  "order": {
                    "type": "integer",
                    "description": "排序顺序"
                  }
                },
                "required": ["id"]
              },
              "example": {
                "id": 1,
                "name": "更新后的名称",
                "description": "更新后的描述",
                "order": 2
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "更新成功",
            "content": {
              "application/json": {
                "example": {
                  "code": 0,
                  "message": "分类更新成功",
                  "data": {
                    "id": 1,
                    "name": "更新后的名称",
                    "description": "更新后的描述",
                    "order": 2,
                    "createdAt": "2024-03-14T10:00:00.000Z",
                    "updatedAt": "2024-03-14T10:00:00.000Z"
                  }
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["分类管理"],
        "summary": "删除分类",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "integer",
                    "description": "分类ID"
                  },
                  "deleteMode": {
                    "type": "string",
                    "enum": ["delete", "move"],
                    "description": "处理方式：delete(删除所有书签)或move(移动到未分类)"
                  }
                },
                "required": ["id", "deleteMode"]
              },
              "example": {
                "id": 1,
                "deleteMode": "move"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "删除成功",
            "content": {
              "application/json": {
                "examples": {
                  "move": {
                    "value": {
                      "code": 0,
                      "message": "分类删除成功，相关站点已移至未分类",
                      "data": null
                    }
                  },
                  "delete": {
                    "value": {
                      "code": 0,
                      "message": "分类及其下的所有站��已删除",
                      "data": null
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/register": {
      "post": {
        "tags": ["用户认证"],
        "summary": "用户注册",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "required": ["username", "password", "email"]
              },
              "example": {
                "username": "testuser",
                "password": "password123",
                "email": "test@example.com"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "注册成功",
            "content": {
              "application/json": {
                "example": {
                  "code": 0,
                  "message": "注册成功",
                  "data": {
                    "id": 1,
                    "username": "testuser",
                    "email": "test@example.com"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "tags": ["用户认证"],
        "summary": "用户登录",
        "description": "account 可以是用户名或邮箱",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "account": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "required": ["account", "password"]
              },
              "example": {
                "account": "testuser",
                "password": "password123"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "登录成功",
            "content": {
              "application/json": {
                "example": {
                  "code": 0,
                  "message": "登录成功",
                  "data": {
                    "token": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...",
                    "user": {
                      "id": 1,
                      "username": "testuser",
                      "email": "test@example.com"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/sites": {
      "get": {
        "tags": ["站点管理"],
        "summary": "获取站点列表",
        "responses": {
          "200": {
            "description": "成功响应",
            "content": {
              "application/json": {
                "example": {
                  "code": 0,
                  "message": "获取站点列表成功",
                  "data": [
                    {
                      "id": 1,
                      "title": "示例站点",
                      "url": "https://example.com",
                      "description": "站点描述",
                      "category": "技术博客",
                      "tags": ["技术", "博客"],
                      "icon": "https://example.com/favicon.ico",
                      "createdAt": "2024-03-14T10:00:00.000Z",
                      "updatedAt": "2024-03-14T10:00:00.000Z"
                    }
                  ]
                }
              }
            }
          }
        }
      },
      "delete": {
        "tags": ["站点管理"],
        "summary": "删除站点",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "integer",
                    "description": "站点ID"
                  }
                },
                "required": ["id"]
              },
              "example": {
                "id": 1
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "删除成功",
            "content": {
              "application/json": {
                "example": {
                  "code": 0,
                  "message": "站点删除成功",
                  "data": null
                }
              }
            }
          },
          "400": {
            "description": "参数错误",
            "content": {
              "application/json": {
                "example": {
                  "code": 400,
                  "message": "缺少站点ID",
                  "data": null
                }
              }
            }
          },
          "404": {
            "description": "站点不存在",
            "content": {
              "application/json": {
                "example": {
                  "code": 404,
                  "message": "站点不存在",
                  "data": null
                }
              }
            }
          }
        }
      }
    },
    "/sites/create": {
      "post": {
        "tags": ["站点管理"],
        "summary": "创建站点",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string",
                    "description": "站点标题"
                  },
                  "url": {
                    "type": "string",
                    "description": "站点URL"
                  },
                  "description": {
                    "type": "string",
                    "description": "站点描述"
                  },
                  "category": {
                    "type": "string",
                    "description": "所属分类"
                  },
                  "tags": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    },
                    "description": "标签列表"
                  },
                  "icon": {
                    "type": "string",
                    "description": "站点图标"
                  }
                },
                "required": ["title", "url", "category"]
              },
              "example": {
                "title": "GitHub",
                "url": "https://github.com",
                "description": "全球最大的代码托管平台",
                "category": "开发工具",
                "tags": ["代码", "开源", "Git"],
                "icon": "https://github.com/favicon.ico"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "创建成功",
            "content": {
              "application/json": {
                "example": {
                  "code": 0,
                  "message": "创建站点成功",
                  "data": {
                    "id": 1,
                    "title": "GitHub",
                    "url": "https://github.com",
                    "description": "全球最大的代码托管平台",
                    "category": "开发工具",
                    "tags": ["代码", "开源", "Git"],
                    "icon": "https://github.com/favicon.ico",
                    "createdAt": "2024-03-14T10:00:00.000Z",
                    "updatedAt": "2024-03-14T10:00:00.000Z"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/sites/category/{category}": {
      "get": {
        "tags": ["站点管理"],
        "summary": "获取指定分类的站点列表",
        "parameters": [
          {
            "name": "category",
            "in": "path",
            "required": true,
            "schema": {
              "type": "string"
            },
            "description": "分类名称"
          }
        ],
        "responses": {
          "200": {
            "description": "获取成功",
            "content": {
              "application/json": {
                "example": {
                  "code": 0,
                  "message": "获取分类站点成功",
                  "data": [
                    {
                      "id": 1,
                      "title": "GitHub",
                      "url": "https://github.com",
                      "description": "全球最大的代码托管平台",
                      "category": "开发工具",
                      "tags": ["代码", "开源", "Git"],
                      "icon": "https://github.com/favicon.ico",
                      "createdAt": "2024-03-14T10:00:00.000Z",
                      "updatedAt": "2024-03-14T10:00:00.000Z"
                    }
                  ]
                }
              }
            }
          }
        }
      }
    },
    "/sites/count": {
      "get": {
        "tags": ["站点管理"],
        "summary": "获取站点总数",
        "responses": {
          "200": {
            "description": "获取成功",
            "content": {
              "application/json": {
                "example": {
                  "code": 0,
                  "message": "获取站点总数成功",
                  "data": 60
                }
              }
            }
          }
        }
      }
    },
    "/categories/count": {
      "get": {
        "tags": ["分类管理"],
        "summary": "获取分类总数",
        "responses": {
          "200": {
            "description": "获取成功",
            "content": {
              "application/json": {
                "example": {
                  "code": 0,
                  "message": "获取分类总数成功",
                  "data": 10
                }
              }
            }
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "tags": ["用户认证"],
        "summary": "退出登录",
        "description": "需要在请求头中携带 token",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "responses": {
          "200": {
            "description": "退出成功",
            "content": {
              "application/json": {
                "example": {
                  "code": 0,
                  "message": "退出登录成功",
                  "data": null
                }
              }
            }
          },
          "401": {
            "description": "未登录或 token 已过期",
            "content": {
              "application/json": {
                "example": {
                  "code": 401,
                  "message": "请先登录",
                  "data": null
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
