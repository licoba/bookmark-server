{
  "openapi": "3.0.1",
  "info": {
    "title": "导航网站 API",
    "description": "导航网站的所有接口文档",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "http://localhost:3000/api",
      "description": "本地开发环境"
    }
  ],
  "paths": {
    "/categories": {
      "get": {
        "tags": ["分类管理"],
        "summary": "获取所有分类",
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 0
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Category"
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["分类管理"],
        "summary": "创建分类",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string",
                    "example": "新分类名称"
                  }
                },
                "required": ["name"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                }
              }
            }
          }
        }
      }
    },
    "/websites": {
      "get": {
        "tags": ["网站管理"],
        "summary": "获取网站列表",
        "parameters": [
          {
            "name": "category_id",
            "in": "query",
            "description": "分类ID（可选）",
            "required": false,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "page",
            "in": "query",
            "description": "页码，默认为1",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 1,
              "minimum": 1
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "每页数量，默认为10",
            "required": false,
            "schema": {
              "type": "integer",
              "default": 10,
              "minimum": 1,
              "maximum": 100
            }
          }
        ],
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "integer",
                      "example": 0
                    },
                    "data": {
                      "type": "object",
                      "properties": {
                        "total": {
                          "type": "integer",
                          "description": "总记录数",
                          "example": 100
                        },
                        "items": {
                          "type": "array",
                          "items": {
                            "$ref": "#/components/schemas/Website"
                          }
                        }
                      }
                    }
                  }
                },
                "examples": {
                  "success": {
                    "value": {
                      "code": 0,
                      "data": {
                        "total": 100,
                        "items": [
                          {
                            "id": 1,
                            "title": "Google",
                            "url": "https://www.google.com",
                            "description": "搜索引擎",
                            "category_id": 1,
                            "created_at": "2024-03-14T12:00:00Z",
                            "updated_at": "2024-03-14T12:00:00Z"
                          }
                        ]
                      }
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["网站管理"],
        "summary": "创建网站",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/WebsiteInput"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "成功",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApiResponse"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Category": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "name": {
            "type": "string",
            "example": "常用工具"
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "Website": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "example": 1
          },
          "title": {
            "type": "string",
            "example": "Google"
          },
          "url": {
            "type": "string",
            "example": "https://www.google.com"
          },
          "description": {
            "type": "string",
            "example": "搜索引擎"
          },
          "category_id": {
            "type": "integer",
            "example": 1
          },
          "created_at": {
            "type": "string",
            "format": "date-time"
          },
          "updated_at": {
            "type": "string",
            "format": "date-time"
          }
        }
      },
      "WebsiteInput": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "example": "网站标题"
          },
          "url": {
            "type": "string",
            "example": "https://example.com"
          },
          "description": {
            "type": "string",
            "example": "网站描述"
          },
          "category_id": {
            "type": "integer",
            "example": 1
          }
        },
        "required": ["title", "url", "category_id"]
      },
      "ApiResponse": {
        "type": "object",
        "properties": {
          "code": {
            "type": "integer",
            "example": 0
          },
          "message": {
            "type": "string",
            "example": "操作成功"
          },
          "data": {
            "type": "object"
          }
        }
      }
    }
  }
}
